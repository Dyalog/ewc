 :Select ctl
 :Case 'GO'
     sf←form,'.',sf
     (rows cols)←(sf∘,¨'.ROWS.EDIT' '.COLS.EDIT')eWG¨⊂'Value'
     size←sf eWG 'Size'
     demoDrawBoxesFlex form size rows cols

 :Case 'CLR'
     ∘∘∘
     n←eWN form,'.BX'
     eEX n

 :Case 'HIDE'
     ∘∘∘
     viz←~(form,'.HIDE')eWG'State'
     obs←form∘,¨(0=⎕NC form,'.BX')↓'.BX' '.LOGO'
     obs eWS¨⊂'Visible'viz
 :EndSelect
